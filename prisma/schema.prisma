  supplier        TenantSupplier @relation(fields: [supplierId], references: [id])
  purchaseOrder   TenantPurchaseOrder? @relation(fields: [purchaseOrderId], references: [id])
  items           TenantBillItem[]

  @@unique([tenantId, billNumber])
  @@map("tenant_bills")
}

// Template for tenant-specific bill items
model TenantBillItem {
  id              String   @id @default(uuid())
  tenantId        String   @map("tenant_id")
  billId          String   @map("bill_id")
  inventoryItemId String?  @map("inventory_item_id")

  // Item details
  itemName        String   @map("item_name")
  itemSku         String?  @map("item_sku")
  description     String?

  // Quantities and pricing
  quantity        Decimal
  unitPrice       Decimal  @map("unit_price")
  lineTotal       Decimal  @map("line_total")
  unitOfMeasure   String   @default("METER") @map("unit_of_measure")

  // Tracking
  isActive        Boolean  @default(true) @map("is_active")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  // Relationships
  bill            TenantBill @relation(fields: [billId], references: [id])
  inventoryItem   TenantInventoryItem? @relation(fields: [inventoryItemId], references: [id])

  @@map("tenant_bill_items")
}

